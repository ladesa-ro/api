{
  "name": "@ladesa-ro/api-root",
  "version": "0.0.0-freezed.0",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "prepare": "husky",
    "lint:check": "eslint -c eslint.config.mjs src",
    "lint:fix": "eslint -c eslint.config.mjs --fix src",
    "check:static": "pnpm run -w format:check; pnpm run -w lint:check",
    "format:check": "prettier --end-of-line lf --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:write": "prettier --end-of-line lf --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "w:release:base": "release-it -c .release-it.json",
    "release:base": "./scripts/smart-release.sh",
    "release:check": "pnpm run -w release:base --ci --dry-run -VV",
    "release:patch": "pnpm run -w release:base patch --ci",
    "release:minor": "pnpm run -w release:base minor --ci",
    "release:major": "pnpm run -w release:base major --ci",
    "release:patch:alpha": "pnpm run -w release:base patch --preRelease=alpha --ci",
    "release:minor:alpha": "pnpm run -w release:base minor --preRelease=alpha --ci",
    "release:major:alpha": "pnpm run -w release:base major --preRelease=alpha --ci",
    "release:development": "pnpm run -w release:base --preRelease=alpha --ci",
    "release:production": "pnpm run -w release:base --ci"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e",
  "dependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.9.1",
    "@release-it/bumper": "^6.0.1",
    "auto-changelog": "^2.4.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.5",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0"
  }
}
