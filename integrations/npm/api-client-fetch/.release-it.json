{
  "git": {
    "commit": false,
    "push": false,
    "requireCommits": true,
    "requireCleanWorkingDir": false,
    "commitMessage": "chore(integrations/npm/api-client-fetch): release v${version} [skip ci]"
  },

  "github": {
    "release": false
  },
  "npm": {
    "publish": false
  },

  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md",
      "gitRawCommitsOpts": {
        "path": "integrations/npm/api-client-fetch"
      }
    }
  },

  "hooks": {
    "before:bump": "npm run build",
    "after:bump": ["git add package.json", "git add package-lock.json", "git add CHANGELOG.md"]
  }
}
