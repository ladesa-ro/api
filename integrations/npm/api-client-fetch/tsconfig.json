{
  "compilerOptions": {
    "strict": true,

    "module": "Node16",
    "lib": ["esnext", "dom"],
    "moduleResolution": "Node16",
    "resolveJsonModule": true,

    "declaration": true,
    "removeComments": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,

    "baseUrl": ".",
    "outDir": "./dist",

    "incremental": true,
    "skipLibCheck": true
  }
}
