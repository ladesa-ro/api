{
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json",
      "out": ["package.json", "package-lock.json"]
    }
  },
  "git": {
    "tag": false,
    "push": false,
    "commit": false,
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "commitMessage": "chore: release v${version} [skip ci]"
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": true,
    "versionArgs": ["--allow-same-version", "--workspaces-update=false"],
    "publishArgs": ["--include-workspace-root"]
  }
}
