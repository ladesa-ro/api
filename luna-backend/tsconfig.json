{
  "compilerOptions": {
    "strict": true,
    "module": "node16",
    "lib": ["esnext"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true
  }
}
